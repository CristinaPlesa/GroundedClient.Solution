  body {
    background-image: url(https://images.unsplash.com/photo-1527151888350-329ba03a1936?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1350&q=80);
